<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Environment variable-based properties with defaults -->
	<property name="APP_NAME" value="${APP_NAME:-nvdb-tnits-generator}"/>
	<property name="ENVIRONMENT" value="${ENV:-local}"/>
	<property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>
	<property name="TNITS_LOG_LEVEL" value="${TNITS_LOG_LEVEL:-INFO}"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} [%thread] %-5level %logger{36} app=${APP_NAME} env=${ENVIRONMENT} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="${LOG_LEVEL}">
		<appender-ref ref="STDOUT"/>
	</root>

	<logger name="no.vegvesen.nvdb.tnits" level="${TNITS_LOG_LEVEL}"/>
</configuration>
